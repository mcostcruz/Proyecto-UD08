<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ActividadController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="tablaActividades" layoutX="62.0" layoutY="40.0" prefHeight="275.0" prefWidth="507.0">
              <columns>
                <TableColumn fx:id="nombreColum" editable="false" prefWidth="75.0" text="Titulo" />
                  <TableColumn fx:id="inicioColum" prefWidth="77.0" text="Inicio" />
                  <TableColumn fx:id="finColum" prefWidth="77.0" text="Fin" />
                  <TableColumn fx:id="lugarColum" prefWidth="77.0" text="Lugar" />
                  <TableColumn fx:id="orgColum" prefWidth="116.0" text="Organizador" />
                  <TableColumn fx:id="plazasColum" prefWidth="84.0" text="Plazas" />
              </columns>
            </TableView>
            <Button fx:id="btnCrearActividad" layoutX="416.0" layoutY="332.0" mnemonicParsing="false" onAction="#crearActividad" text="Crear nueva" />
            <Button fx:id="btnAnotarme" layoutX="186.0" layoutY="332.0" mnemonicParsing="false" onAction="#apuntarse" text="Anotarme!" />
         </children>
    </AnchorPane>
  </children>
</VBox>
